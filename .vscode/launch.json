    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/refactor_tool_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/build/refactor_tool",
            "args": ["${workspaceFolder}/tests/tests_data/for_refactor.cpp"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "GCC: Build Debug app",
        }
    ]
}